<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    	<encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{10} - %msg%n</pattern>
        </encoder>
    </appender>
     
    <appender name="ALL_FILE" class="ch.qos.logback.core.FileAppender">
    	<file>log/issnbot-all.log</file>
    	
	    <encoder>
	      <charset>UTF-8</charset>
	      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{10} - %msg%n</pattern>
	    </encoder>
  	</appender>
  	
  	<appender name="ERROR_FILE" class="ch.qos.logback.core.FileAppender">
    	<file>log/issnbot-errors.log</file>
    	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
	      <level>ERROR</level>
	    </filter>

	    <encoder>
	      <charset>UTF-8</charset>
	      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{10} - %msg%n</pattern>
	    </encoder>
  	</appender>
  	
  	<appender name="REPORT_FILE" class="ch.qos.logback.core.FileAppender">
    	<file>log/issnbot-report.log</file>

	    <encoder>
	      <charset>UTF-8</charset>
	      <pattern>%msg%n</pattern>
	    </encoder>
  	</appender>
  	

  
    <logger name="org.issn.issnbot">
        <appender-ref ref="ALL_FILE" />
        <appender-ref ref="ERROR_FILE" />
    </logger>
    
    <logger name="org.issn.issnbot.IssnBotReportListener" additivity="false">
        <appender-ref ref="REPORT_FILE" />
        <appender-ref ref="STDOUT" />
    </logger>

  	<!-- shut up some stuff -->
    <logger name="org.issn.issnbot.WikidataSparqlCountryIdProvider">
		<level value="INFO" />
	</logger> 
	<logger name="org.issn.issnbot.WikidataSparqlLanguageIdProvider">
		<level value="INFO" />
	</logger> 
    
    
    <!-- 3rdparty Loggers -->
	<logger name="org.apache.http">
		<level value="INFO" />
	</logger> 
	
	<logger name="org.eclipse.rdf4j">
		<level value="INFO" />
	</logger>     
         
    <!-- ** -->
     
    <root level="DEBUG">
        <level value="DEBUG" />
    </root>

</configuration>